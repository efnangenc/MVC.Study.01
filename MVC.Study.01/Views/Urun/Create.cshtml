@using MVC.Study._01.Context.Concrete

@model Urun
<div class="card">
    <div class="card-header">

        YENİ
    </div>
    <div class="card-body">
        <form class="row g-3" asp-controller="Urun" asp-action="Create">
            <div class="col-md-12">
                <label asp-for="UrunAdi" class="form-label"></label>
                <input asp-for="UrunAdi" class="form-control" />
                <span asp-validation-for="UrunAdi" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Fiyat" class="form-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input type="submit" class="btn btn-success" value="Kaydet" />
            </div>
        </form>
    </div>
</div>
