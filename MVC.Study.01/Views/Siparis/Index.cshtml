@using MVC.Study._01.Context.Concrete
@model IEnumerable<Siparis>

<div class="container mt-5">
    <h2>Siparişler</h2>

    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Müşteri</th>
                        <th>Ürün</th>
                        <th>Sipariş Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var siparis in Model)
                    {
                        <tr>
                            <td>@siparis.SiparisId</td>
                            <td>@siparis.Musteri.Ad @siparis.Musteri.Soyad</td>
                            <td>@siparis.Urun.UrunAdi</td>
                            <td>@siparis.SiparisTarihi.ToShortDateString()</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@siparis.SiparisId" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@siparis.SiparisId" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-primary">Yeni Sipariş Ekle</a>
    </div>
</div>